{
  "name": "api-koa-typescript-starter",
  "description": "A boiler-plate setup for API servers with Koa and TypeScript",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rangle/api-koa-typescript-starter.git"
  },
  "bugs": {
    "url": "https://github.com/rangle/api-koa-typescript-starter/issues"
  },
  "engines": {
    "node": ">= 8"
  },
  "scripts": {
    "start": "cross-env PROJECT_ENV=staging PORT=3001 node --use-strict ./dist/app.js",
    "dev": "cross-env PROJECT_ENV=local PORT=3001 ts-node-dev ./src/app.ts",
    "local:start": "cross-env PROJECT_ENV=local npm run daemon:start",
    "local:stop": "cross-env PROJECT_ENV=local npm run daemon:stop",
    "staging:start": "cross-env PROJECT_ENV=staging npm run daemon:start",
    "staging:stop": "cross-env PROJECT_ENV=staging npm run daemon:stop",
    "test": "cross-env PROJECT_ENV=testing jest --coverage --forceExit --config jest-config.json",
    "test:watch": "cross-env PROJECT_ENV=testing jest --watch",
    "lint": "tslint --project ./tsconfig.json",
    "raml": "raml2html -i doc/api/api.raml -o api.html",
    "daemon:start": "forever --uid api-koa-starter -a -c 'node --use-strict' start ./dist/app.js",
    "daemon:stop": "forever stop api-koa-starter || true",
    "build": "tsc"
  },
  "dependencies": {
    "@types/koa-static": "^4.0.2",
    "convert-excel-to-json": "^1.7.0",
    "debug": "^4.3.3",
    "koa": "2.13.4",
    "koa-body": "4.2.0",
    "koa-convert": "^2.0.0",
    "koa-helmet": "^6.1.0",
    "koa-jwt": "^4.0.3",
    "koa-logger": "3.2.1",
    "koa-morgan": "^1.0.1",
    "koa-multer": "^1.0.2",
    "koa-router": "10.1.1",
    "koa-static": "^5.0.0",
    "md5-file": "^5.0.0",
    "path": "^0.12.7",
    "ramda": "^0.28.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "uuid": "^8.3.2",
    "winston": "^3.5.1"
  },
  "devDependencies": {
    "@types/convert-excel-to-json": "^1.7.1",
    "@types/jest": "^27.4.0",
    "@types/koa": "^2.13.4",
    "@types/koa-helmet": "^6.0.4",
    "@types/koa-morgan": "^1.0.5",
    "@types/koa-router": "^7.4.4",
    "@types/morgan": "^1.9.3",
    "@types/ramda": "^0.27.64",
    "@types/request-promise": "^4.1.48",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "babel-core": "^6.26.3",
    "babel-jest": "^27.5.1",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.8.0",
    "forever": "^4.0.3",
    "jest": "^27.5.1",
    "mockery": "^2.1.0",
    "nodemon": "^2.0.15",
    "raml2html": "^7.8.0",
    "sinon": "^13.0.1",
    "supertest": "^6.2.2",
    "throng": "^5.0.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "ts-node-dev": "^1.1.8",
    "tslint": "^5.20.1",
    "typescript": "^4.5.5"
  }
}
